<h2 class="title">Edit this Celebrity: {{celebrity.name}}</h2>
<div class="nav nav-secondary">
  <a href="/celebrities">Go back</a>
</div>

<div class="row">
  <div class="row__item">
    <div class="img-container">
      <img src="{{celebrity.imageUrl}}" alt="{{celebrity.name}}">
    </div>

    <form action="/celebrities/{{celebrity.id}}" method="post">
      <input type="text" name="name" placeholder="name" value="{{celebrity.name}}">
      <input type="text" name="imageUrl" placeholder="imageUrl" value="{{celebrity.imageUrl}}">
      <input type="text" name="occupation" placeholder="occupation" value="{{celebrity.occupation}}">
      <input type="text" name="catchPhrase" placeholder="catchPhrase" value="{{celebrity.catchPhrase}}">

      <button type="submit" class="btn btn-primary">Edit Celebrity</button></form>
  </div>
</div>